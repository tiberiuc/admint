<div>
  <h1 class="title"><%= @title %></h1>
  <table class="table is-hoverable">
    <tbody>
      <tr :for={{field_id, field} <- @fields} id={field_id}>
        <td><%= field.label %></td>
        <td><%= Map.get(@row, field_id) %></td>
      </tr>
    </tbody>
  </table>

  <.link navigate={get_page_route(@admint, @page_id)}>Back</.link>
</div>
